<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BellApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BellApp" parent="Base.Theme.BellApp" />

    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- LogIn Theme -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/persianorange</item>
        <item name="colorButtonNormal">@color/lapis</item>
        <item name="colorControlNormal">@color/lapis</item>
        <item name="colorControlActivated">@color/lapis</item>
        <item name="colorControlHighlight">@color/persianorange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/seasalt</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary">@color/black</item>

        <item name="android:icon">@mipmap/ic_bell_app</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="android:textColorHint">@color/lapis</item>
    </style>

</resources>